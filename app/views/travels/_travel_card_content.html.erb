<div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-md md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-6">
  <div class="relative">
    <% if travel.images.attached? %>
      <%= image_tag travel.images.first, alt: "#{travel.name} thumbnail", class: "object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" %>
    <% else %>
      <div class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg">
          <%= image_tag "no_image_available.jpg", alt: "No Image Placeholder" %>
      </div>
    <% end %>
    <% if travel.favorite %>
        <%= heroicon "heart", options: { class: "absolute top-4 right-4 text-pink-400 h-6 w-6" } %>
      <% else %>
        <%= heroicon "heart", variant: :outline, options: { class: "absolute top-2 right-2 text-white h-6 w-6" } %>
      <% end %>
  </div>
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
      <%= travel.name %>
    </h5>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 flex flex-nowrap">
      <strong class="block font-medium mb-1">Dates Visited:</strong>
      <%= travel.dates_traveled %>
    </p>
  </div>
</div>

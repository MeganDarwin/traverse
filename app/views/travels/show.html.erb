<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= @travel.name %></h1>
    <%= link_to "Back to travels", travels_path, class: "btn-secondary" %>
  </div>

  <div class="mt-4">
    <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-6">
      <% if @travel.images.attached? %>
        <%= image_tag @travel.images.first, alt: "#{@travel.name} thumbnail", class: "object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" %>
      <% else %>
        <div class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg">
            <%= image_tag "no_image_available.jpg", alt: "No Image Placeholder" %>
        </div>
      <% end %>
      <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
          <%= @travel.name %>
        </h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          <strong class="block font-medium mb-1">Dates Visited:</strong>
          <%= @travel.dates_traveled %>
        </p>
      </div>
      <% if @travel.favorite %>
        <%= heroicon "heart", options: { class: "text-pink-400 h-4 w-4" } %>
      <% else %>
        <%= heroicon "heart", variant: :outline, options: { class: "h-4 w-4" } %>
      <% end %>
    </div>
  </div>

  <h2 class="font-bold text-2xl mt-5">Images</h2>
  <%# <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-6"> %>
    <%= turbo_frame_tag "images" do %>
      <div id="images_list">
        <% if @travel.images.attached? %>
          <div class="images flex flex-wrap -m-2">
            <% @travel.images.each do |image| %>
              <div class="p-2 w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/6">
                <%= image_tag image, alt: "#{@travel.name} image", class: "travel-image w-full h-auto rounded-lg shadow-md" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>No images available</p>
        <% end %>
      </div>
    <% end %>
  <%# </div> %>

  <% if @travel.user == current_user %>
    <%= form_with(model: @travel, url: upload_images_travel_path(@travel), local: true, html: { multipart: true }) do |form| %>
      <div class="mt-4">
        <%= form.label :images, "Upload Images" %>
        <%= form.file_field :images, multiple: true, class: "form-control" %>
        <%= form.submit "Upload", class: "btn-primary mt-2" %>
      </div>
    <% end %>
  <% end %>

  <h2 class="font-bold text-2xl mt-5">Comments</h2>
  <div id="comments" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-6">
    <% @travel.comments.each do |comment| %>
      <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
  </div>

  <h2 class="font-bold text-2xl mt-5">Comments</h2>
  <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-6">
    <%= turbo_frame_tag "new_comment" do %>
      <%= render partial: "comments/form", locals: { comment: Comment.new, commentable: @travel } %>
    <% end %>
  </div>

  <% if @travel.user == current_user %>
    <div class="inline-block ml-2 flex justify-end">
      <%= link_to "Edit this travel", edit_travel_path(@travel), class: "btn-primary mr-4" %>
      <%= button_to "Destroy this travel", @travel, method: :delete, data: { turbo: false, confirm: "Are you sure?" }, class: "btn-danger" %>
    </div>
  <% end %>
</div>
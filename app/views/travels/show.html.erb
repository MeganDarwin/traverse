<% content_for :title, "Showing travel" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing travel</h1>

  <%= render @travel %>

  <h2 class="font-bold text-2xl mt-5">Images</h2>
    <%= render partial: "image_form" %>

    <%= turbo_frame_tag "images" do %>
      <div id="images_list">
        <% if @travel.images.attached? %>
          <div class="images">
            <% @travel.images.each do |image| %>
              <%= image_tag image, alt: "#{@travel.name} image", class: "travel-image" %>
            <% end %>
          </div>
        <% else %>
          <p>No images available</p>
        <% end %>
      </div>
    <% end %>

  <h2 class="font-bold text-2xl mt-5">Comments</h2>
  <div id="comments">
    <% @travel.comments.each do |comment| %>
      <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
  </div>

  <%= turbo_frame_tag "new_comment" do %>
    <%= render partial: "comments/form", locals: { comment: Comment.new, commentable: @travel } %>
  <% end %>

  <%= link_to "Edit this travel", edit_travel_path(@travel), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to travels", travels_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this travel", @travel, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
